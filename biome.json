{
	"$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
  "files": {
		"include": [
			"app/**/*.ts",
			"app/**/*.tsx"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
      "style": {
        "useSelfClosingElements": "off"
      },
      "a11y": {
        "useValidAnchor": "off",
        "noSvgWithoutTitle": "off",
        "useKeyWithClickEvents": "off"
      },
      "suspicious": {
        "noExplicitAny": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off"
      },
      "complexity": {
        "noForEach": "off"
      }
		}
	},
  "formatter": {
		"enabled": true,
    "indentWidth": 2,
    "lineWidth": 80
	},
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single"
    }
  }
}
