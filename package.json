		"clsx": "^2.1.1",
		"dayjs": "^1.11.11",
		"goober": "^2.1.14",
		"husky": "^9.0.11",
		"jotai": "^2.8.0",
		"lint-staged": "^15.2.2",
		"lodash-es": "^4.17.21",
		"nprogress": "^0.2.0",
		"ofetch": "^1.3.4",
